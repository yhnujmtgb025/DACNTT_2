<%- include ("../shares/header") %>
    <!-- List user not follow -->

    <div class="container formEdit">
        <div class="row">
            <div class="col-3 list-group">
                <a href="/myProfile/editProfile" class="list-group-item list-group-item-action ">
                    Edit profile
                </a>
                <a href="#" class="list-group-item list-group-item-action ">
                    Change Password
                </a>

            </div>

            <div class="col-9" style="border-left:1px solid #DBDBDB; margin-left: -14.5px;">

                <div class="coForm">

                    <form class=" form-infor" method="post" action="/myProfile/editProfile/changePassword">
                        <div class="form-group row in-img">
                            <label class="col-sm-2 col-form-label">
                                <img class="img-edit" width="50" height="50" src="<%=image%>" alt="Card image cap"
                                    style="border-radius: 50% 50%;">
                            </label>

                            <div class="col-sm-10">
                                <ul id="img-option">
                                    <li id="name-edit" style="margin-top: 15px;"><%=fullname%></li>
                                </ul>
                            </div>

                        </div>

                         <input  type="hidden" name="email" value="<%=email%>" class="form-control" 
                        style="margin-top: 15px;"> 

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Old password</label>
                            <div class="col-sm-10">
                                <input type="password" name="oldPass" value="<%=oldPass%>" class="form-control" 
                                    style="margin-top: 15px;">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">New Password</label>
                            <div class="col-sm-10">
                                <input type="password" name="password" value="<%=password%>" class="form-control" 
                                    style="margin-top: 15px;">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Confirm New Password</label>
                            <div class="col-sm-10">
                                <input type="password" name="rePassword" value="<%=rePassword%>" class="form-control" id="" value=""
                                    style="margin-top: 15px;">
                            </div>
                        </div>
                        
                        <% if(success.length> 0) {%>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label"> </label>
                                <div class="col-sm-10 alert-pass text-center">
                                    <div class="alert alert-success alert-dismissible ">
                                        <button type="button" class="close btn-err" data-dismiss="alert"
                                            aria-label="close" >&times;</button>
                                        <p class="err"> <%= success%> </p> 
                                    </div>
                                </div>
                        </div>
                        <%}%>

                        <% if(error.length> 0) {%>
                        <div class="form-group row ">
                            <label class="col-sm-2 col-form-label col-err"> </label>
                         
                                <div class="col-sm-10 alert-pass text-center">
                                  
                                    <div class="alert alert-danger alert-dismissible " style="width: 60%;">
                                        <button type="button" class="close btn-err" data-dismiss="alert"
                                            aria-label="close" >&times;</button>
                                        <p class="err"> <%= error%> </p> 
                                    </div>
                             
                                </div>
                               
                        </div>
                        <%}%> 

                        <div class="form-group row">
                            <div class="col-sm-10 text-center">
                                <button type="submit" class="btn btn-primary" id="save">
                                    <a id="save1"> Change Password</a>
                                </button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

